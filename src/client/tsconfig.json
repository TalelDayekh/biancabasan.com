{
  "compilerOptions": {
    "resolveJsonModule": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "outDir": "./src",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "declaration": true,
    "importHelpers": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    // "types": ["jest"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"]
}
